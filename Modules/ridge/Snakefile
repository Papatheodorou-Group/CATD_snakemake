rule ridge_run:
    input:
        getC1(getBulks())

    output:
        "Output/{sample}_res_ridge.rds"

    conda:
        "env.yaml"

    benchmark:
        "Benchmarks/{sample}_ridge_benchmark.txt"

    resources:
        mem_mb=getMB(config['mem_gb']['minorOps'])

    shell:
        "Rscript Modules/ridge/ridge_run.R {input} {output}"
