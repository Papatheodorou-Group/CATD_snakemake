rule dtangle_run:
    input:
        getC2(getC1(getBulks()))

    output:
        "Output/{sample}_res_dtangle.rds"

    conda:
        "env.yaml"

    benchmark:
        "Benchmarks/{sample}_dtangle_benchmark.txt"

    resources:
        mem_mb=getMB(config['mem_gb']['minorOps'])

    shell:
        "Rscript Modules/dtangle/dtangle_run.R {input} {output}"
