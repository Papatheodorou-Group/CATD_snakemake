rule CPM_run:
    input:
        getPhenData(getC0(getBulks()))

    output:
        "Output/{sample}_res_CPM.rds"

    conda:
        "env.yaml"

    threads: config['cores']['CPM']

    benchmark:
        "Benchmarks/{sample}_CPM_benchmark.txt"

    resources:
        mem_mb=getMB(config['mem_gb']['CPM'])

    shell:
        "Rscript Modules/CPM/CPM_run.R {input} {threads} {output}"
