rule RLR_run:
    input:
        getC1(getBulks('{sample}'), '{sample}')

    output:
        "Output/{sample}_res_RLR.rds"

    conda:
        "env.yaml"

    benchmark:
        "Benchmarks/{sample}_RLR_benchmark.txt"

    resources:
        mem_mb=getMB(config['mem_gb']['minorOps'])

    shell:
        "Rscript Modules/RLR/RLR_run.R {input} {output}"
